#block1
VBoxManage createvm --name block1 --ostype "Ubuntu_64" --register
VBoxManage modifyvm block1 --cpus 1 --memory 1024
VBoxManage createhd --filename ~/VirtualBox\ VMs/block1/block1-0 --size 102400
VBoxManage createhd --filename ~/VirtualBox\ VMs/block1/block1-1 --size 2048000
VBoxManage storagectl block1 --name IDE --controller PIIX4 --add ide --bootable on
Vboxmanage storageattach block1 --storagectl IDE --type dvddrive --port 1 --device 1 --medium  emptydrive
VBoxManage storagectl block1 --name SATA --controller IntelAhci --portcount 2 --add sata --bootable on --hostiocache on
Vboxmanage storageattach block1 --storagectl SATA --type hdd --port 1 --device 0 --medium  ~/VirtualBox\ VMs/block1/block1-0.vdi
Vboxmanage storageattach block1 --storagectl SATA --type hdd --port 2 --device 0 --medium  ~/VirtualBox\ VMs/block1/block1-1.vdi
VBoxManage modifyvm block1 --nic1 natnetwork --nat-network1 Management --nicpromisc1 allow-all --macaddress1 auto
VBoxManage modifyvm block1 --nic2 natnetwork --nat-network2 Public --nicpromisc2 allow-all --macaddress2 auto
VBoxManage modifyvm block1 --nic3 hostonly --nicpromisc3 allow-all --macaddress3 auto
VBoxManage modifyvm block1 --boot1 dvd --boot2 disk --boot3 net --boot4  none
